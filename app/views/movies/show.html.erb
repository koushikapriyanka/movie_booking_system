<p id="notice"><%= notice %></p>


<h1>Movie Details</h1>

<table>
  <thead>
    <tr>
      <th>Theatre Name</th>
      <th>Seat limit</th>
      <th>Show timing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_details.each do |detail| %>
      <tr>
        <td><%= detail.theatre.name %></td>
        <td><%= detail.theatre.seat_limit %></td>
        <td><%= detail.timing %></td>
      </tr>
    <% end %>
  </tbody>
</table>

