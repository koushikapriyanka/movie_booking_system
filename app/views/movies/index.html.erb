<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%=link_to movie.name, movie_show_details_path(:movie_id => movie.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

